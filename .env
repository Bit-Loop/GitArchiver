# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gharchive
DB_USER=gharchive
DB_PASSWORD=gharchive_password

# GitHub API Token (optional, but recommended for rate limiting)
# Get one from: https://github.com/settings/tokens
# GITHUB_TOKEN=your_github_token_here

# Performance Tuning - Oracle Cloud Safe Limits
MAX_CONCURRENT=6
BATCH_SIZE=500
CHUNK_SIZE=4096

# Resource Limits for Oracle Cloud (24GB RAM system)
MAX_MEMORY_MB=18000
MEMORY_WARNING_MB=16000
MAX_DISK_USAGE_GB=40
DISK_WARNING_GB=35
CPU_LIMIT_PERCENT=80
MAX_FILE_SIZE_MB=500

# Resource Monitoring
RESOURCE_CHECK_INTERVAL=30
MEMORY_CHECK_INTERVAL=50
TEMP_CLEANUP_INTERVAL=300
EMERGENCY_CLEANUP_THRESHOLD=0.9

# Web API
WEB_HOST=0.0.0.0
WEB_PORT=8080

# Logging
LOG_LEVEL=INFO
LOG_FILE=gharchive_scraper.log

# Cron Mode
ENABLE_CRON_MODE=true
CRON_LOCK_FILE=/tmp/gharchive_scraper.lock
